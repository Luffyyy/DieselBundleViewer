<controls:AdonisWindow xmlns:controls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI" x:Class="DieselBundleViewer.Views.DialogWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/" Title="{Binding Title}"
            WindowStartupLocation="CenterOwner" Icon="/favicon.ico">
    <Window.Style>
        <Style TargetType="{x:Type Window}" >
            <Setter Property="SizeToContent" Value="WidthAndHeight"/>
        </Style>
    </Window.Style>
</controls:AdonisWindow>
