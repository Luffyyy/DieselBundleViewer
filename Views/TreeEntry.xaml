<UserControl x:Class="DieselBundleViewer.Views.TreeEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"                                     
             Height="20"
             >
            <StackPanel Orientation="Horizontal">
                <StackPanel.InputBindings>
                    <MouseBinding Gesture="LeftClick" Command="{Binding OnClick}"/>
                </StackPanel.InputBindings>
                <Image Width="20" Height="20" Source="{Binding Icon}"/>
        <TextBlock Margin="2" Text="{Binding Name, FallbackValue=TEXT}"/>
            </StackPanel>
</UserControl>
